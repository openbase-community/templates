{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "iOS: Generate Project",
            "type": "shell",
            "command": "tuist generate",
            "problemMatcher": [],
            "presentation": {
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "iOS: Install Dependencies",
            "type": "shell",
            "command": "tuist install",
            "problemMatcher": [],
            "presentation": {
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "iOS: Build",
            "type": "shell",
            "command": "xcodebuild -workspace $${name_pascal}.xcworkspace -scheme $${name_pascal} -destination 'platform=iOS Simulator,name=iPhone 16' build",
            "problemMatcher": [],
            "presentation": {
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "iOS: Clean Build",
            "type": "shell",
            "command": "rm -rf DerivedData && xcodebuild -workspace $${name_pascal}.xcworkspace -scheme $${name_pascal} -destination 'platform=iOS Simulator,name=iPhone 16' build",
            "problemMatcher": [],
            "presentation": {
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "iOS: Open Xcode",
            "type": "shell",
            "command": "open $${name_pascal}.xcworkspace",
            "problemMatcher": [],
            "presentation": {
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}
